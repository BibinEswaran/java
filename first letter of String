import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        String str="hi hello appu";
         str=' '+str;
        for(int i=0;i<str.length();i++){
            if(str.charAt(i)==' '){
                System.out.println(str.charAt(i+1));
                }
             
             
            
        }

    }
    
    
    
